  <script>
    document.getElementById("year").textContent = new Date().getFullYear();
     const footerDrawerBtn = document.getElementById("footerDrawerBtn");
  const footerDrawer = document.getElementById("footerDrawer");
  const footerOverlay = document.getElementById("footerDrawerOverlay");
  const footerDrawerClose = document.getElementById("footerDrawerClose");
  const footerDrawerBtnIcon = document.getElementById("footerDrawerBtnIcon");

  function openFooterDrawer() {
    footerDrawer.classList.remove('translate-x-full');
    footerDrawer.classList.add('translate-x-0');
    footerOverlay.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    footerDrawer.setAttribute('aria-hidden', 'false');
    footerDrawerBtn.setAttribute('aria-expanded', 'true');
    footerDrawerBtnIcon.classList.add('rotate-180');
    footerDrawerClose.focus();
  }

  function closeFooterDrawer() {
    footerDrawer.classList.remove('translate-x-0');
    footerDrawer.classList.add('translate-x-full');
    footerOverlay.classList.add('hidden');
    document.body.style.overflow = '';
    footerDrawer.setAttribute('aria-hidden', 'true');
    footerDrawerBtn.setAttribute('aria-expanded', 'false');
    footerDrawerBtnIcon.classList.remove('rotate-180');
  }

  footerDrawerBtn?.addEventListener('click', (e) => {
    e.preventDefault();
    const isOpen = footerDrawer.classList.contains('translate-x-0');
    isOpen ? closeFooterDrawer() : openFooterDrawer();
  });

  footerDrawerClose?.addEventListener('click', closeFooterDrawer);
  footerOverlay?.addEventListener('click', closeFooterDrawer);

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeFooterDrawer();
  });

  footerDrawer?.addEventListener('click', (e) => {
    if (e.target.closest('a')) closeFooterDrawer();
  });

  const desktopBlogBtn = document.getElementById("desktopBlogBtn");
  const desktopBlogList = document.getElementById("desktopBlogList");
  const desktopBlogIcon = document.getElementById("desktopBlogIcon");

  desktopBlogBtn?.addEventListener("click", () => {
    desktopBlogList.classList.toggle("hidden");
    desktopBlogIcon.classList.toggle("rotate-180");
  });

  document.addEventListener("click", (e) => {
    if (!desktopBlogBtn.contains(e.target) && !desktopBlogList.contains(e.target)) {
      desktopBlogList.classList.add("hidden");
      desktopBlogIcon.classList.remove("rotate-180");
    }
  });
  </script>

