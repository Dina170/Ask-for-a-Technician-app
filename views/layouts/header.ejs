<header class="bg-[#2A4759] shadow-md p-4 lg:px-20 px-4 flex justify-between items-center z-50 relative">
  <!-- Logo -->
  <div class="flex items-center">
    <img src="/images/logo.png" alt="logo" class="h-8 lg:h-10 w-auto rounded-md" />
  </div>

  <!-- Desktop Navigation -->
  <nav class="hidden lg:block">
    <ul class="flex gap-8 text-white font-medium items-center">
      <li>
        <a href="/" class="hover:underline hover:text-[#FC8500] transition-colors duration-200">الرئيسية</a>
      </li>
      
      <li>
        <a href="/showMoreTechnicians" class="hover:underline hover:text-[#FC8500] transition-colors duration-200">الفنيين</a>
      </li>
      
      <!-- Blogs Dropdown -->
      <li class="relative group">
        <button class="hover:text-[#FC8500] flex items-center gap-1 focus:outline-none transition-colors duration-200">
          المدونة
          <i class="fa-solid fa-chevron-down text-xs group-hover:rotate-180 transition-transform duration-200"></i>
        </button>
        <ul class="absolute right-0 mt-2 w-48 bg-white text-[#2A4759] rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform translate-y-2 group-hover:translate-y-0">
          <% if (locals.blogs && blogs.length > 0) { %>
            <% blogs.forEach((blog, index) => { %>
              <li class="<%= index === 0 ? 'rounded-t-lg' : '' %> <%= index === blogs.length - 1 ? 'rounded-b-lg' : '' %>">
                <a href="/blogs/<%= blog._id %>" class="block px-4 py-3 hover:bg-[#2A4759] hover:text-white transition-colors duration-200 <%= index === 0 ? 'rounded-t-lg' : '' %> <%= index === blogs.length - 1 ? 'rounded-b-lg' : '' %>">
                  <%= blog.blog %>
                </a>
              </li>
            <% }) %>
          <% } else { %>
            <li>
              <span class="block px-4 py-3 text-gray-400">لا توجد مقالات</span>
            </li>
          <% } %>
        </ul>
      </li>
      
      <li>
        <a href="/contact" class="hover:underline hover:text-[#FC8500] transition-colors duration-200">تواصل معنا</a>
      </li>
    </ul>
  </nav>

  <!-- Contact (Desktop) -->
  <div class="hidden lg:block">
    <a href="tel:05075813050" class="cursor-pointer hover:underline hover:text-[#FC8500] text-white transition-colors duration-200 flex items-center gap-2">
      <i class="fa-solid fa-phone text-sm"></i>
      <span class="hidden xl:inline">اتصل بنا:</span>
      05075813050
    </a>
  </div>

  <!-- Mobile Menu Button -->
  <button id="mobileMenuBtn" class="lg:hidden text-white text-xl focus:outline-none hover:text-[#FC8500] transition-colors duration-200">
    <i class="fa-solid fa-bars" id="hamburgerIcon"></i>
    <i class="fa-solid fa-times hidden" id="closeIcon"></i>
  </button>

  <!-- Mobile Navigation Menu -->
  <div id="mobileMenu" class="lg:hidden absolute top-full left-0 w-full bg-[#2A4759] border-t border-[#406A84] opacity-0 invisible transform -translate-y-2 transition-all duration-300 z-40">
    <nav class="py-4">
      <ul class="space-y-1">
        <li>
          <a href="/" class="block px-6 py-3 text-white hover:bg-[#406A84] hover:text-[#FC8500] transition-colors duration-200">
            <i class="fa-solid fa-home ml-3 text-sm"></i>
            الرئيسية
          </a>
        </li>
        
        <li>
          <a href="/showMoreTechnicians" class="block px-6 py-3 text-white hover:bg-[#406A84] hover:text-[#FC8500] transition-colors duration-200">
            <i class="fa-solid fa-users ml-3 text-sm"></i>
            الفنيين
          </a>
        </li>
        
        <!-- Mobile Blogs Dropdown -->
        <li>
          <button id="mobileBlogBtn" class="w-full text-right px-6 py-3 text-white hover:bg-[#406A84] hover:text-[#FC8500] transition-colors duration-200 flex items-center justify-between">
            <div class="flex items-center">
              <i class="fa-solid fa-blog ml-3 text-sm"></i>
              المدونة
            </div>
            <i class="fa-solid fa-chevron-down text-xs transition-transform duration-200" id="blogChevron"></i>
          </button>
          <ul id="mobileBlogSubmenu" class="bg-[#1a3a4a] max-h-0 overflow-hidden transition-all duration-300">
            <% if (locals.blogs && blogs.length > 0) { %>
              <% blogs.forEach(blog => { %>
                <li>
                  <a href="/blogs/<%= blog._id %>" class="block px-12 py-3 text-white text-sm hover:bg-[#406A84] hover:text-[#FC8500] transition-colors duration-200">
                    <i class="fa-solid fa-angle-left ml-2 text-xs"></i>
                    <%= blog.blog %>
                  </a>
                </li>
              <% }) %>
            <% } else { %>
              <li>
                <span class="block px-12 py-3 text-gray-400 text-sm">لا توجد مقالات</span>
              </li>
            <% } %>
          </ul>
        </li>
        
        <li>
          <a href="/contact" class="block px-6 py-3 text-white hover:bg-[#406A84] hover:text-[#FC8500] transition-colors duration-200">
            <i class="fa-solid fa-envelope ml-3 text-sm"></i>
            تواصل معنا
          </a>
        </li>
        
        <!-- Mobile Contact -->
        <li class="border-t border-[#406A84] mt-4 pt-4">
          <a href="tel:05075813050" class="block px-6 py-3 text-[#FC8500] hover:bg-[#406A84] transition-colors duration-200 flex items-center gap-3">
            <i class="fa-solid fa-phone text-sm"></i>
            <span>اتصل بنا: 05075813050</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const mobileMenuBtn = document.getElementById('mobileMenuBtn');
  const mobileMenu = document.getElementById('mobileMenu');
  const hamburgerIcon = document.getElementById('hamburgerIcon');
  const closeIcon = document.getElementById('closeIcon');
  const mobileBlogBtn = document.getElementById('mobileBlogBtn');
  const mobileBlogSubmenu = document.getElementById('mobileBlogSubmenu');
  const blogChevron = document.getElementById('blogChevron');

  let isMenuOpen = false;
  let isBlogSubmenuOpen = false;

  // Toggle Mobile Menu
  mobileMenuBtn.addEventListener('click', function() {
    isMenuOpen = !isMenuOpen;
    
    if (isMenuOpen) {
      mobileMenu.classList.remove('opacity-0', 'invisible', '-translate-y-2');
      mobileMenu.classList.add('opacity-100', 'visible', 'translate-y-0');
      hamburgerIcon.classList.add('hidden');
      closeIcon.classList.remove('hidden');
      document.body.style.overflow = 'hidden'; 
    } else {
      mobileMenu.classList.add('opacity-0', 'invisible', '-translate-y-2');
      mobileMenu.classList.remove('opacity-100', 'visible', 'translate-y-0');
      hamburgerIcon.classList.remove('hidden');
      closeIcon.classList.add('hidden');
      document.body.style.overflow = 'auto'; 
      
      if (isBlogSubmenuOpen) {
        toggleBlogSubmenu();
      }
    }
  });

  function toggleBlogSubmenu() {
    isBlogSubmenuOpen = !isBlogSubmenuOpen;
    
    if (isBlogSubmenuOpen) {
      const scrollHeight = mobileBlogSubmenu.scrollHeight;
      mobileBlogSubmenu.style.maxHeight = scrollHeight + 'px';
      blogChevron.style.transform = 'rotate(180deg)';
    } else {
      mobileBlogSubmenu.style.maxHeight = '0';
      blogChevron.style.transform = 'rotate(0deg)';
    }
  }

  if (mobileBlogBtn) {
    mobileBlogBtn.addEventListener('click', function(e) {
      e.preventDefault();
      toggleBlogSubmenu();
    });
  }

  document.addEventListener('click', function(e) {
    if (isMenuOpen && !e.target.closest('header')) {
      mobileMenuBtn.click();
    }
  });

  window.addEventListener('resize', function() {
    if (window.innerWidth >= 1024 && isMenuOpen) {
      isMenuOpen = false;
      mobileMenu.classList.add('opacity-0', 'invisible', '-translate-y-2');
      mobileMenu.classList.remove('opacity-100', 'visible', 'translate-y-0');
      hamburgerIcon.classList.remove('hidden');
      closeIcon.classList.add('hidden');
      document.body.style.overflow = 'auto';
    }
  });

  const mobileLinks = mobileMenu.querySelectorAll('a[href]');
  mobileLinks.forEach(link => {
    link.addEventListener('click', function() {
      setTimeout(() => {
        if (isMenuOpen) {
          mobileMenuBtn.click();
        }
      }, 150);
    });
  });
});
</script>

<style>
@media (max-width: 640px) {
  header {
    padding-left: 1rem;
    padding-right: 1rem;
  }
  
  header img {
    height: 1.75rem; 
  }
}

.group:hover .group-hover\:rotate-180 {
  transform: rotate(180deg);
}

.group:hover .group-hover\:translate-y-0 {
  transform: translateY(0);
}

#mobileMenu {
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

#mobileBlogSubmenu {
  scrollbar-width: none;
  -ms-overflow-style: none;
}

#mobileBlogSubmenu::-webkit-scrollbar {
  display: none;
}
</style>