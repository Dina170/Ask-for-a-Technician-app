<h1>Forgot Password</h1>

<form action="/forgot-password" method="POST">
    <div>
        <label for="email">Enter your registered email:</label>
        <input type="email" id="email" name="email" required />
    </div>
    <button type="submit">Send Reset Link</button>
</form>

<% if (error) { %>
    <div class="error">
        <%= error %>
    </div>
    <% } %>

        <% if (success) { %>
            <div class="success">
                <%= success %>
            </div>
            <% } %>