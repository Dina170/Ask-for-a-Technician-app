<h1>
    <%= technician.mainTitle %>
</h1>
<% if (technician.jobTechnicianPhoto) { %>
    <img src="/uploads/technicians/<%= technician.jobTechnicianPhoto %>" width="200">
    <% } %>
        <p><strong>Description:</strong>
            <%= technician.description %>
        </p>
        <p><strong>Phone:</strong>
            <%= technician.phoneNumber %>
        </p>
        <!-- Add other fields as needed -->
        <div>
            <a href="/technicians/<%= technician._id %>/edit">Edit</a>
            <form action="/technicians/<%= technician._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Delete this technician?')">Delete</button>
            </form>
            <a href="/technicians">Back to List</a>
        </div>