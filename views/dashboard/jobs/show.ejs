<div class="rounded-tl-3xl shadow-md border p-5 h-[100%]">
  <div class="mb-6 px-6">
    <h1 class="text-xl font-bold my-1 text-right">عرض مهنة الحي</h1>
    <p class="text-gray-600 text-right">
      <a href="/dashboard/jobs" class="hover:text-sky-950 hover:font-medium">مهن الأحياء</a> &gt; عرض المهنة
    </p>
  </div>

  <div class="bg-white rounded-lg px-6 py-2">
    <!-- Job Name -->
    <div class="mb-6">
      <label class="block text-right mb-2 required font-medium">اسم المهنة</label>
      <input type="text" class="w-full p-2 border rounded-md text-right" disabled readonly value="<%= job.name %>">
    </div>

    <!-- Job Photo -->
    <div class="mb-10">
      <label class="block text-right mb-4 required font-medium">صورة الوظيفة</label>
      <div class="flex justify-center px-4 w-full rounded-md">
        <div class="w-40 h-40 rounded-md bg-gray-100 flex items-center justify-center">
          <% if (job.jobPhoto) { %>
            <img class="w-full h-full object-cover rounded-md" src="/uploads/jobs/<%= job.jobPhoto %>" alt="<%= job.name %>">
          <% } %>
        </div>
      </div>
    </div>

    <!-- Main Description -->
    <div class="mb-6">
      <label class="block text-right mb-2 font-medium">الوصف الرئيسي</label>
      <div class="border rounded-md p-3 text-right bg-gray-50">
        <%- job.mainDescription %>
      </div>
    </div>

    <!-- Sub Description -->
    <div class="mb-6">
      <label class="block text-right mb-2 font-medium">الوصف الفرعي</label>
      <div class="border rounded-md p-3 text-right bg-gray-50">
        <%- job.subDescription %>
      </div>
    </div>

    <!-- Neighborhood Name -->
    <div class="mb-6">
      <label class="block text-right mb-2 font-medium">الحي</label>
      <input type="text" class="w-full p-2 border rounded-md text-right" disabled readonly value="<%= job.neighborhoodName.name %>">
    </div>

    <!-- Actions -->
    <div class="flex justify-between mt-10 gap-4">
      <a href="/dashboard/jobs" class="bg-white border  border-gray-900 hover:bg-gray-700 hover:text-white text-gray-800 font-bold py-3 px-4 rounded-md w-full text-center">
        <i class="fa-solid fa-arrow-left ms-2"></i> رجوع
      </a>
    </div>
  </div>
</div>
