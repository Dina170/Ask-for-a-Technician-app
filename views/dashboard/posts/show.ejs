<h1>
    <%= post.title %>
</h1>
<p><strong>Blog:</strong>
    <%= post.blog.title %>
</p>
<p><strong>Name:</strong>
    <%= post.name %>
</p>
<p><strong>Permanent Link:</strong>
    <%= post.permaLink %>
</p>
<div>
    <%- post.content %>
</div>
<a href="/dashboard/posts">Back to Posts</a> |
<a href="/dashboard/posts/<%= post._id %>/edit">Edit</a>
<form action="/dashboard/posts/<%= post._id %>?_method=DELETE" method="POST" style="display:inline;">
    <button type="submit" onclick="return confirm('Delete this post?')">Delete</button>
</form>