<div class="rounded-tl-3xl shadow-md border p-5 h-[100%]">
    <!-- Header -->
    <div class="mb-6 px-6">
        <h1 class="text-xl font-bold my-1 text-right">عرض المدونة</h1>
        <p class="text-gray-600 text-right">
            <a href="/dashboard/posts" class="hover:text-sky-950 hover:font-medium"> المدونات </a> &gt; عرض المدونة
        </p>
    </div>

    <!-- Content -->
    <div class="bg-white rounded-lg px-6 py-2">
        <div class="mb-6">
            <label class="block text-right mb-2 font-medium">المدونة</label>
            <input type="text" class="w-full p-2 border rounded-md text-right bg-gray-100"
                value="<%= post.blog.title %>" disabled readonly>
        </div>

        <div class="mb-6">
            <label class="block text-right mb-2 font-medium">اسم المدونة</label>
            <input type="text" class="w-full p-2 border rounded-md text-right bg-gray-100" value="<%= post.name %>"
                disabled readonly>
        </div>

        <div class="mb-6">
            <label class="block text-right mb-2 font-medium">عنوان</label>
            <input type="text" class="w-full p-2 border rounded-md text-right bg-gray-100" value="<%= post.title %>"
                disabled readonly>
        </div>

        <div class="mb-6">
            <label class="block text-right mb-2 font-medium">رابط دائم</label>
            <input type="text" class="w-full p-2 border rounded-md text-right bg-gray-100" value="<%= post.permaLink %>"
                disabled readonly>
        </div>

        <!-- Blog Description -->
        <div class="mb-6">
            <label class="block text-right mb-2 font-medium">الوصف</label>
            <div id="descriptionEditor" dir="rtl" class="quill-container border rounded-md"></div>
        </div>



        <!-- Actions -->
        <div class="flex justify-between mt-10">
            <a href="/dashboard/posts"
                class="bg-white w-full border border-gray-900 hover:bg-gray-700 hover:text-white text-gray-800 font-bold py-3 px-4 rounded-md flex items-center justify-center">
                رجوع<i class="fa-solid fa-arrow-left ms-2 "></i>
            </a>
        </div>
    </div>
</div>
<!-- Quill CSS & JS -->
<link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet" />
<script src="https://cdn.quilljs.com/1.3.7/quill.min.js"></script>

<script>
  // Initialize Quill in read-only mode
  const initQuillEditor = () => {
    const toolbarOptions= [
        [{ header: [1, 2, 3, false] }],
        ['bold', 'italic', 'underline', 'strike'],
        [{ 'color': [] }, { 'background': [] }],
        ['link', 'image', 'blockquote', 'code-block'],
        [{ list: 'ordered' }, { list: 'bullet' }],
        [{ align: [] }],
        [{ 'direction': 'rtl' }],
        ['clean']
      ]

    try {
      const editor = new Quill('#descriptionEditor', {
        theme: 'snow',
        readOnly: true,
        modules: { toolbar: toolbarOptions }
      });

      // تحميل المحتوى القديم للعرض فقط
      editor.root.innerHTML = `<%- post.content || '' %>`;

      return editor;
    } catch (error) {
      console.error('Error initializing Quill:', error);
      return null;
    }
  };

  const descriptionEditor = initQuillEditor();
</script>

<style>
  .ql-editor {
    direction: rtl !important;
    text-align: right !important;
    background: #f7f5f5ef; /* نفس ستايل الفني */
  }
</style>