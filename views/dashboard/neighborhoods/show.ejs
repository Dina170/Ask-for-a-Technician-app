<div class="rounded-tl-3xl shadow-md border p-5 h-[100%]">
  <div class="mb-6 px-6">
    <h1 class="text-xl font-bold my-1 text-right">عرض الحي</h1>
    <p class="text-gray-600 text-right"><a href="/dashboard/neighborhoods/" class="hover:text-Sky-950 hover:font-medium ">الأحياء</a> &gt; عرض الحي</p>
  </div>

  <div class="bg-white rounded-lg px-6 py-2">
    <div class="mb-6">
      <label class="block text-right mb-2 required font-medium">اسم الحي</label>
      <input type="text" name="name" class="w-full p-2 border rounded-md text-right" disabled readonly value="<%= neighborhood.name %>">
    </div>

    <div class="mb-10">
      <label class="block text-right mb-4 required font-medium">صورة الحي</label>
        <div class="flex justify-center px-4 w-full rounded-md">
          <!-- Preview -->
        <div id="imagePreview" class=" w-40 h-40 rounded-md bg-gray-100 flex items-center justify-center ">
          <% if (neighborhood.neighborhoodPhoto) { %>
              <img class="w-full h-full object-cover rounded-md" src="/uploads/neighborhoods/<%= neighborhood.neighborhoodPhoto %>" >
            <% } %>
        </div>
        </div>
    </div>

    <div class="flex justify-between mt-10">
    <a href="/dashboard/neighborhoods" class="bg-white border border-gray-900 hover:bg-gray-700 hover:text-white text-gray-800 font-bold py-3 px-4 rounded-md flex items-center justify-center w-full">
      <i class="fa-solid fa-arrow-left ms-2"></i>رجوع
    </a>
    </div>
  </div>


