<h1><%= neighborhood ? "Edit" : "Add" %> Neighborhood</h1>

<% if (error) { %>
  <p style="color: red;"><%= error %></p>
<% } %>

<form action="<%= neighborhood ? '/dashboard/neighborhoods/' + neighborhood._id + '?_method=PUT' : '/dashboard/neighborhoods' %>"
      method="POST"
      enctype="multipart/form-data">
  
  <label for="name">Name:</label>
  <input type="text" name="name" value="<%= neighborhood?.name || '' %>" required>

  <% if (neighborhood && neighborhood.neighborhoodPhoto) { %>
    <p>Current Photo:</p>
    <img src="/uploads/neighborhoods/<%= neighborhood.neighborhoodPhoto %>" width="150">
  <% } %>

  <label for="neighborhoodPhoto">
    Upload Photo <%= neighborhood ? "(leave empty to keep current photo)" : "(required)" %>:
  </label>
  <input type="file" name="neighborhoodPhoto" <%= neighborhood ? '' : 'required' %>>

  <button type="submit"><%= neighborhood ? "Update" : "Add" %></button>
</form>

