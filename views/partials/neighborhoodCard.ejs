<% if (neighborhoodsWithJobs.length === 0) { %>
  <p class="text-center text-gray-500">لا يوجد أحياء متاحة حالياً.</p>
<% } else { %>
  <% neighborhoodsWithJobs.forEach(({ neighborhood, job }) => { %>
    <div class="neighborhood-card bg-white border rounded-lg shadow-sm p-4 w-full max-w-3xl mx-auto">
      <div class="flex items-center">
        <img src="<%= neighborhood.neighborhoodPhoto %>" 
             class="w-16 h-16 rounded-full object-cover mr-4" />
        <div class="mr-4">
          <h3 class="text-lg font-bold text-[#222222] mb-1"><%= neighborhood.name %></h3>
          <% if (job) { %>
            <p class="text-sm text-gray-600">
              <%- job.mainDescription.replace(/<[^>]+>/g, "") %>
            </p>
          <% } else { %>
            <p class="text-sm text-gray-400">لا يوجد وصف للخدمة في هذا الحي</p>
          <% } %>
        </div>
      </div>

      <!-- الأزرار -->
      <div class="mt-4 flex flex-row gap-2 sm:gap-3 w-full">
        <a href="https://wa.me/رقم_الواتساب" target="_blank"
          class="flex-1 flex items-center justify-center gap-1.5 bg-[#2A4759] hover:bg-[#406A84] text-white text-xs sm:text-sm px-4 py-2 sm:px-5 sm:py-3 rounded-[10px] sm:rounded-lg w-[163px] sm:w-full h-[38px] sm:h-auto">
          <i class="fab fa-whatsapp text-lg sm:text-xl"></i>
          ارسال عبر واتساب
        </a>

        <a href="tel:رقم_الهاتف"
          class="flex-1 flex items-center justify-center gap-1.5 bg-white border border-[#2A4759] hover:bg-[#2A4759] hover:text-white text-[#2A4759] text-xs sm:text-sm px-4 py-2 sm:px-5 sm:py-3 rounded-[10px] sm:rounded-lg w-[163px] sm:w-full h-[38px] sm:h-auto">
          <i class="fa-solid fa-phone text-lg sm:text-xl"></i>
          اتصل بنا
        </a>
      </div>
    </div>
  <% }) %>
<% } %>
